#!/bin/bash

echo 'Starting tests in 15 seconds...'

sleep 15

FAIL=0

bundle exec rspec --tag sources --tag annotation spec/integration_spec.rb &
bundle exec rspec --tag search --tag media spec/integration_spec.rb &
bundle exec rspec --tag users --tag other spec/integration_spec.rb &

for job in `jobs -p`
do
  echo $job
  wait $job || let "FAIL+=1"
done

echo $FAIL

if [ "$FAIL" == "0" ];
then
  exit 0
else
  exit 1
fi
